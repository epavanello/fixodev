{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug App",
      "program": "${workspaceFolder}/apps/server/src/app.ts",
      "cwd": "${workspaceFolder}/apps/server",
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug CLI",
      "program": "${workspaceFolder}/apps/server/src/cli.ts",
      "cwd": "${workspaceFolder}/apps/server",
      "args": [],
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug CLI issue-to-pr",
      "program": "${workspaceFolder}/apps/server/src/cli.ts",
      "cwd": "${workspaceFolder}/apps/server",
      "args": [
        "issue-to-pr",
        "https://github.com/epavanello/cheatgpt.app/issues/18",
        "--installation-id",
        ""
      ],
      "stopOnEntry": false,
      "watchMode": false,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "bun",
      "request": "attach",
      "name": "Attach to Bun",
      "url": "ws://localhost:6499/"
    }
  ]
}
