# GitHub App
# Mandatory: Unique identifier for the GitHub App
GITHUB_APP_ID=
# Mandatory: Private key for the GitHub App
GITHUB_PRIVATE_KEY=
# Mandatory: Secret for verifying GitHub webhook payloads
GITHUB_WEBHOOK_SECRET=

# Git Bot Identity
# Optional: Username of the Git bot
GIT_BOT_USERNAME=RepoSister Bot
# Optional: Email of the Git bot
GIT_BOT_EMAIL=bot@repositer.ai

# OpenAI
# Mandatory: API key to access OpenAI services
OPENAI_API_KEY=

# Application
# Optional: Port number for application to run
PORT=3000
# Optional: Environment for the application (development, production, etc.)
BUN_ENV=development
# Optional: Log level for the application
LOG_LEVEL=debug
# Optional: Maximum number of concurrent jobs to run
MAX_CONCURRENT_JOBS=2
# Optional: Flag to control repository cleanup
CLEANUP_REPOSITORIES=true

# Docker
# Optional: Prefix for Docker runtime
DOCKER_RUNTIME_PREFIX=ghbot